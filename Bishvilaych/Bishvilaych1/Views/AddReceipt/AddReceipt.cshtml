@using Bishvilaych.Controllers
@model receipt
@using BussinessLayer
@{
    ViewBag.Title = "LifeStyleNuztritionist";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script>
    var count = 0;
    function selectPay() {
        var x = document.getElementById("PayBy").value
        if (x == "אשראי") {
            alert("n");
            document.getElementById("Card").style.display = 'block'
            document.getElementById("chequa").style.display = 'none'
            document.getElementById("addPayment").style.display = 'block'
        }
        if (x == "שיק") {
            document.getElementById("Card").style.display = 'none'
            document.getElementById("chequa").style.display = 'block'
            document.getElementById("addPayment").style.display = 'block'
        }
        if (x == "מזומן") {
            document.getElementById("Card").style.display = 'none'
            document.getElementById("chequa").style.display = 'none'
            document.getElementById("addPayment").style.display = 'none'
        }


    }

    function addPay()//הכפלת הדיב
    {
        count++;
        var elmnt = document.getElementsByName("div1")[0];
        var cln = elmnt.cloneNode(true);
        document.body.appendChild(cln);

    }

