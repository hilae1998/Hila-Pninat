@{
    ViewBag.Title = "Patiants";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    footer {
        position: absolute !important;
    }
</style>
<div style="width:62%;margin-top:9%">
    <ul dir="rtl" style="list-style-type:none">
        <li @(Session["auth"].ToString() == 1.ToString() || Session["auth"].ToString() == 2.ToString() ? "style=display:block" : "style=display:none")>
            @*@Html.ActionLink("הוספת מטופלת", "AddPatiant", "AddPatiant")*@
            <span class="glyphicon glyphicon-plus"></span>
            <button class="btnOkAdd" style="width:200px!important;font-size:x-large;" onclick="location.href='@Url.Action("AddPatiant","AddPatiant")'">הוספת מטופלת</button>
        </li>
        <br @(Session["auth"].ToString() == 1.ToString() || Session["auth"].ToString() == 2.ToString() ? "style=display:block" : "style=display:none") />
        <li @(Session["auth"].ToString() == 1.ToString() || Session["auth"].ToString() == 2.ToString() ? "style=display:block" : "style=display:none")>
            @*@Html.ActionLink("רשימת מטופלות למעקב", "Patiants", "FollowedPatiant")*@
            <span class="glyphicon glyphicon-list-alt"></span>
            <button class="btnOkAdd" style="width:200px!important;font-size:x-large;" onclick="location.href='@Url.Action("Patiants","FollowedPatiant")'">רשימת מטופלות למעקב</button>
        </li>

        <br @(Session["auth"].ToString() == 1.ToString() || Session["auth"].ToString() == 2.ToString() ? "style=display:block" : "style=display:none") />
        <li>
            <span class="glyphicon glyphicon-list-alt"></span>
            @*@Html.ActionLink("רשימת מטופלות מלאה", "PatiantsList", "FullListPatients")*@
            <button class="btnOkAdd" style="width:200px!important;font-size:x-large;" onclick="location.href='@Url.Action("PatiantsList","FullListPatients")'">רשימת מטופלות מלאה</button>
        </li>
        <br />
        <li>
            <form action="@Url.Action("Patiants", "Patiants") " method="post">
                <input size="29" style="height:40px;" type="text" name="idpatiant" id="idpatiant" placeholder="    הכנס/י תעודת זהות של מטופלת   " />&nbsp;&nbsp;&nbsp;
                <input class="btnOk" type="submit" style="width:110px!important;" value="הכנס" /><br /><br /><label style="color:red;font-size:initial">@ViewBag.error</label>
            </form>
        </li>
    </ul>
</div>


