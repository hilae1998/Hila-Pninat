            <li @(Session["auth"].ToString() == 1.ToString() || Session["auth"].ToString() == 4.ToString() ? "style= display:block" : "style = display:none" )>@Html.ActionLink("בדיקה רפואית", "PhyicalExam", "PhyicalExam")</li>
