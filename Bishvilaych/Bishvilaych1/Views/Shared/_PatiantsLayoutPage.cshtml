@{
                /**/

                Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>
<style>
    #lastvisit {
        border: 2px solid #d8d4d6;
        padding: 10px 10px 2px 10px;
        width: 150px;
        color: #52172e;
        overflow: scroll;
        text-align: center;
        margin-left: 89%;
        position: fixed;
        background-color: #ffffff;
        overflow-x: visible;
        min-height: 156px;
        max-height: 350px;
        overflow-y: auto;
    }

        #lastvisit a {
            color: #52172e;
            font-size: 20px;
        }

    .disablebutton {
        opacity: 0.8;
    }

    ul {
        top: 0px;
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: rgba(129, 0, 64, 0.34);
        font-family: Calibri;
        font-size: 15px;
    }

    li {
        float: right;
        padding-right: 20px;
    }

        li a {
            display: inline-block;
            color: #fff;
            text-align: right;
            padding: 15px 5.2px 15px 5.5px;
            text-decoration: none !important;
            min-width: 70px;
        }


        }

        li a:hover 
        {
         font-weight:bold;
        }

            li a:hover {
                background-color: #cbacb8;
                color: white;
            }

    /*Work just for Chrom browser*/
    div.sticky {
        position: -webkit-sticky;
        position: sticky;
        top: 0;
    }

    /*div.sticky {
        position: fixed;
        top: 0;
        width: 100%;
    }*/

    .modal-dialog {
        text-align: center;
        font-size: 30px;
        right: auto;
        left: 0% !important;
    }

    input[type=button]:hover {
        opacity: 0.8;
    }
</style>


<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="sticky">
