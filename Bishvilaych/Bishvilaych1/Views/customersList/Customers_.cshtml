@{
    ViewBag.Title = "Customers_";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using Bishvilaych.Controllers

@model List<Customers>
 <style>
    tr:hover {
        cursor: pointer;
        background-color: #ccc;
    }
</style>
@*בלחיצה כפולה תפתח טבלת לקוחה*@
 <div style="width:100%;margin-left:10% ;margin-right:10%">

     <h2 style="text-align:center">רשימת לקוחות</h2>
     <table dir="rtl" style="width:100%; height:200px" border="1">
         <thead>
             <tr>
                 <td style="text-align:center">תעודת זהות</td>
                 <td style="text-align:center">שם מלא</td>
                 <td style="text-align:center">טלפון</td>
                 <td style="text-align:center">טלפון נוסף</td>
                 <td style="text-align:center">עיר</td>
                 <td style="text-align:center">רחוב</td>
             </tr>
         </thead>
         <tbody>
             @{
                 foreach (var item in Model)
                 {
                     <tr onclick="location.href='@(Url.Action("decision", "CustomersList",new {Id=item.Id}))'">
                         <td>@item.Id</td>
                         <td>@item.FirstName  @item.LastName </td>
                         <td>@item.Phone</td>
                         <td>@item.Phone2</td>
                         <td>@item.City</td>
                         <td>@item.Street</td>
                     </tr>
                 }
             }
         </tbody>
     </table>
 </div>