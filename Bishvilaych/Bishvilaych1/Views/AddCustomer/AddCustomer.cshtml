        }
</style>
@* תקינות תז, קלט מחרוזת , קלט מספרים *@
<script>
    $(document).ready(function(){
    $("#Text1").on("blur", function () {
        $.ajax({
            type: 'get',
            url: "@Url.Action("checkID")",
            data: { ID: $("#Text1").val() },
            success: function (data) {
                $("#idp").html("")
            $("#idp").append(data)
        },
        error:function(){}})
    })
    })
</script>

